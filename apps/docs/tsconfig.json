{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$components/*": ["src/components/*"],
      "$layouts/*": ["src/layouts/*"],
      "$pages/*": ["src/pages/*"],
      "$styles/*": ["src/styles/*"],
      "$assets/*": ["src/assets/*"],
      "$examples/*": ["src/examples/*"],
      "$hooks/*": ["src/hooks/*"]
    },
    "types": ["astro/client"],
    "jsx": "preserve",
    "exactOptionalPropertyTypes": false
  },
  "exclude": ["node_modules", "src/components/Example/stackblitz-template", "dist"]
}
