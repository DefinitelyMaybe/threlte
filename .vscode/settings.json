{
  "actionButtons": {
    "defaultColor": "#9CA5B4",
    "loadNpmCommands": false,
    "reloadButton": null,
    "commands": [
      {
        "cwd": "${workspaceFolder}",
        "name": "$(triangle-right) Install",
        "color": "green",
        "singleInstance": true,
        "command": " pnpm i"
      },
      {
        "cwd": "${workspaceFolder}",
        "name": "$(triangle-right) Cleanup & Install",
        "color": "green",
        "singleInstance": true,
        "command": " pnpm cleanup && pnpm i"
      },
      {
        "cwd": "${workspaceFolder}",
        "name": "$(triangle-right) Format",
        "color": "green",
        "singleInstance": true,
        "command": " pnpm format"
      },
      {
        "cwd": "${workspaceFolder}",
        "name": "$(new-file) Changeset",
        "color": "green",
        "singleInstance": true,
        "command": " npx changeset"
      },
      {
        "cwd": "${workspaceFolder}/apps/docs",
        "name": "$(book) Docs",
        "color": "#2F7DC6",
        "singleInstance": true,
        "command": " pnpm dev"
      },
      {
        "cwd": "${workspaceFolder}/packages/core",
        "name": "$(package) core",
        "color": "#FE3D00",
        "singleInstance": true,
        "command": " pnpm dev"
      },
      {
        "cwd": "${workspaceFolder}/packages/extras",
        "name": "$(package) extras",
        "color": "#FE3D00",
        "singleInstance": true,
        "command": " pnpm dev"
      },
      {
        "cwd": "${workspaceFolder}/packages/flex",
        "name": "$(package) flex",
        "color": "#FE3D00",
        "singleInstance": true,
        "command": " pnpm dev"
      },
      {
        "cwd": "${workspaceFolder}/packages/rapier",
        "name": "$(package) rapier",
        "color": "#FE3D00",
        "singleInstance": true,
        "command": " pnpm dev"
      },
      {
        "cwd": "${workspaceFolder}/packages/theatre",
        "name": "$(package) theatre",
        "color": "#FE3D00",
        "singleInstance": true,
        "command": " pnpm dev"
      },
      {
        "cwd": "${workspaceFolder}/packages/xr",
        "name": "$(package) xr",
        "color": "#FE3D00",
        "singleInstance": true,
        "command": " pnpm dev"
      }
    ]
  },
  "typescript.preferences.importModuleSpecifier": "relative"
}
