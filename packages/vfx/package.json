{
	"name": "@threlte/vfx",
	"version": "0.0.1",
	"description": "A collection of materials for your Threlte apps",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"package": "svelte-kit sync && svelte-package && node ./scripts/cleanupPackage.js && publint",
		"prepare": "svelte-kit sync",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"cleanup": "rimraf node_modules .svelte-kit dist"
	},
	"devDependencies": {
		"@eslint/js": "catalog:",
		"@sveltejs/adapter-auto": "catalog:",
		"@sveltejs/kit": "catalog:",
		"@sveltejs/package": "catalog:",
		"@sveltejs/vite-plugin-svelte": "catalog:",
		"@types/node": "catalog:",
		"eslint": "catalog:",
		"eslint-plugin-svelte": "catalog:",
		"globals": "catalog:",
		"prettier": "catalog:",
		"prettier-plugin-svelte": "catalog:",
		"publint": "catalog:",
		"svelte": "catalog:",
		"svelte-check": "catalog:",
		"typescript": "catalog:",
		"typescript-eslint": "catalog:",
		"vite": "catalog:"
	},
	"peerDependencies": {
		"svelte": ">=5",
		"three": ">=0.160"
	},
	"type": "module",
	"svelte": "./src/lib/index.ts",
	"types": "./src/lib/index.ts",
	"exports": {
		".": {
			"types": "./src/lib/index.ts",
			"svelte": "./src/lib/index.ts"
		}
	},
	"publishOverrides": {
		"files": [
			"dist"
		],
		"svelte": "./dist/index.js",
		"exports": {
			".": {
				"types": "./dist/index.d.ts",
				"svelte": "./dist/index.js"
			}
		},
		"types": "./dist/index.d.ts"
	},
	"keywords": [
		"threlte",
		"svelte",
		"three",
		"three.js",
		"webgl",
		"webgpu",
		"webxr",
		"3d"
	],
	"homepage": "https://threlte.xyz",
	"repository": {
		"type": "git",
		"url": "https://github.com/threlte/threlte.git",
		"directory": "packages/extras"
	},
	"bugs": {
		"url": "https://github.com/threlte/threlte/issues"
	}
}
